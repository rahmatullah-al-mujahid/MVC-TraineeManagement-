<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-light bg-light shadow-sm navbar-expand-md fixed-top">
        <div class="container-fluid bg-info">
            <a class="navbar-brand" href="/Home/Index">TSP Batch Tracker</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse"
                 id="navcol-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item" role="presentation">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item" role="presentation">@Html.ActionLink("Courses", "Index", "Courses", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item" role="presentation">@Html.ActionLink("Batches", "Index", "Batches", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item" role="presentation">@Html.ActionLink("Trainee", "Index", "Trainees", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item" role="presentation">@Html.ActionLink("Modules", "Index", "Modules", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item" role="presentation">@Html.ActionLink("Report", "Rpt", "Reports", new { }, new { @class = "nav-link" })</li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Logout","Logout","Account",new { },new { @class="nav-link"})</li>
                    </ul> 
                }
                else
                {
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "nav-link" })</li>
                    </ul> 
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />

    </div>
    <footer class="container-fluid">
        <p class="d-flex justify-content-between"><span>&copy; @DateTime.Now.Year </span><span>Exam 08</span></p>
    </footer>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>