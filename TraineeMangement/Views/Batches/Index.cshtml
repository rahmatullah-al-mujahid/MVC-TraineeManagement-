@model IEnumerable<TraineeMangement.Models.Batch>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<h2 class="text-md-center text-info">Batch List</h2>

<div class="text-right">
    <p>
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
    </p>
</div>
<table class="table table-striped table-hover ">
    <tr class="">
        <th>
            @Html.DisplayNameFor(model => model.BatchCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Round)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="">
            <td>
                @Html.DisplayFor(modelItem => item.BatchCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Round)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BatchId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.BatchId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BatchId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
<div class="text-right">
    @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
</div>
<link href="~/Content/PagedList.css" rel="stylesheet" />